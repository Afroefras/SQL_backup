select
    cl.name as category_en,
    c.name as category_es,
    c.id as category_id,
    count(distinct p.id) as products
from catalog_product p 
    join catalog_category c on c.id = p.category_id
    join catalog_categorylocalization cl on cl.category_id=c.id and cl.language='en'
where 
    --c.name ~* 'servilletas|pa√±uelos'
    cl.name ~* 'napkins|scarves'
group by 1,2,3
order by 1,products desc;
