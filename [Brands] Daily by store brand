select to_char(date, 'IW') as week, to_char(date, 'DD/MM/YYYY') as date, * from
    (select
        date_trunc('day', o.actual_delivery_time at time zone 'America/Mexico_City') as date,
        concat(s.id, ' - ', s.name) as store,
        concat(gc.id, ' - ', gc.name) as city,
        concat(b.id, ' - ', b.name) as brand,
        count(distinct o.user_id) as users,
        count(distinct o.id) as orders,
        sum(op.quantity) as units_requested,
        sum(op.quantity_found) as units_found,
        coalesce(sum(op.quantity_found*op.branch_price), 0)::numeric as sales
    from orders_orderproduct op
        join catalog_product p on p.id = op.product_id
        join catalog_brand b on b.id = p.brand_id
        join orders_order o on o.id = op.order_id
        join catalog_storebranch sb on sb.id = o.store_branch_id
        join catalog_store s on s.id = sb.store_id
        join geo_city gc on gc.id = sb.city_id
    where 1=1
        and b.id = 65923
        and o.actual_delivery_time >= {{desde}} - interval '1 day' 
        and o.actual_delivery_time < {{hasta}} + interval '2 day'
        and o.actual_delivery_time at time zone 'America/Mexico_City' >= {{desde}} 
        and o.actual_delivery_time at time zone 'America/Mexico_City' < {{hasta}} + interval '1 day'
        and o.currency = 'MXN'
        and o.status = 'DELIVERED'
        and o.order_kind = 'NORMAL'
    group by 1,2,3,4
    ) a;
