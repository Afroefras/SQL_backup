select
    to_char(o.actual_delivery_time at time zone sb.timezone,'yyyy-mm-dd') as date,
    p.category,
    p.brand,
    p.barcodes,
    p.product_id,
    p.product,
    count(distinct o.user_id) as users,
    count(distinct o.id) as orders,
    sum(op.quantity) as units_requested,
    sum(op.quantity_found) as units_found,
    coalesce(sum(op.quantity_found*op.branch_price), 0)::numeric as sales
from orders_orderproduct op
    join (
        select 
            p.id as product_id,
            cl.name as category,
            b.name as brand,
            p.barcodes,
            concat(p.name, ' ', p.package) as product,
            row_number() over (partition by p.id order by p.id) as n
        from catalog_product p
            join catalog_brand b on b.id = p.brand_id
            join brandcenter_brandcentercpg_brands bcpg on bcpg.brand_id = b.id
            join catalog_category c on c.id = p.category_id
            join catalog_categorylocalization cl on cl.category_id=c.id
        where 1=1
            and bcpg.brandcentercpg_id = {{cpg_id}}
            [[and c.id in ({{category_id}})]]
        ) p on p.product_id = op.product_id
    
    join orders_order o on o.id = op.order_id
    join catalog_storebranch sb on sb.id = o.shopper_store_branch_id
where 1=1
    and o.actual_delivery_time >= {{desde}} - interval '1 day' 
    and o.actual_delivery_time < {{hasta}} + interval '2 day'
    and o.actual_delivery_time at time zone sb.timezone >= {{desde}} 
    and o.actual_delivery_time at time zone sb.timezone < {{hasta}} + interval '1 day'
    and o.currency = 'MXN'
    and o.status = 'DELIVERED'
    and o.order_kind = 'NORMAL'
    and p.n = 1
group by 1,2,3,4,5,6;
