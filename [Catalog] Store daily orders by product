select
    'product_branch' as level,
    to_char(o.actual_delivery_time at time zone sb.timezone,'yyyy-mm-dd') as date,
    op.product_id as catalog_product_id,
    sb.id as branch,
    pb.id as productbranch_id,
    min(op.branch_price) as min_branch_price,
    avg(op.branch_price) as avg_branch_price,
    max(op.branch_price) as max_branch_price,
    min(op.shopper_price) as min_shopper_price,
    avg(op.shopper_price) as avg_shopper_price,
    max(op.shopper_price) as max_shopper_price,
    sum(op.quantity) as requested,
    sum(op.quantity_found) as found,
    count(distinct op.id) as order_products,
    sum(coalesce(op.quantity_found*op.branch_price,0)) as sales
from orders_orderproduct op
    join orders_order o on o.id = op.order_id
    join catalog_storebranch sb on sb.id = o.store_branch_id
    join catalog_productbranch pb on pb.product_id = op.product_id and pb.branch_id = sb.id
where 1=1
    and o.currency = 'MXN'
    and o.actual_delivery_time >= {{desde}} - interval '1 day' 
    and o.actual_delivery_time < {{hasta}} + interval '2 day'
    and o.actual_delivery_time at time zone sb.timezone between {{desde}} and {{hasta}} + interval '1 day'
    and o.status = 'DELIVERED'
    and o.order_kind = 'NORMAL'
    and sb.store_id = {{store_id}}
    [[and sb.id = {{branch_id}}]]
    --and op.product_id in ()
group by 1,2,3,4,5

union

select
    'TOTAL' as level,
    to_char(o.actual_delivery_time at time zone sb.timezone,'yyyy-mm-dd') as date,
    0 as catalog_product_id,
    0 as branch,
    0 as productbranch_id,
    0 as min_branch_price,
    0 as avg_branch_price,
    0 as max_branch_price,
    0 as min_shopper_price,
    0 as avg_shopper_price,
    0 as max_shopper_price,
    sum(op.quantity) as requested,
    sum(op.quantity_found) as found,
    count(distinct op.id) as order_products,
    sum(coalesce(op.quantity_found*op.branch_price,0)) as sales
from orders_orderproduct op
    join orders_order o on o.id = op.order_id
    join catalog_storebranch sb on sb.id = o.store_branch_id
where 1=1
    and o.currency = 'MXN'
    and o.actual_delivery_time >= {{desde}} - interval '1 day'
    and o.actual_delivery_time < {{hasta}} + interval '2 day'
    and o.actual_delivery_time at time zone sb.timezone between {{desde}} and {{hasta}} + interval '1 day'
    and o.status = 'DELIVERED'
    and o.order_kind = 'NORMAL'
    and sb.store_id = {{store_id}}
    [[and sb.id = {{branch_id}}]]
group by 1,2,3,4,5
order by level desc, date asc;
