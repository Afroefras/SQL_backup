select 
    distinct u.uuid as user_uuid,
    u.email,
    /*u.phone_number,
    concat(s.id, ' - ', s.name) as store,
    concat(gc.code, ' - ', gc.name) as city,*/
    count(distinct o.id) as orders,
    avg(o.total_receipt) as avg_receipt
from orders_order o
    join catalog_storebranch sb on sb.id = o.store_branch_id
    join catalog_store s on s.id = sb.store_id
    join geo_city gc on gc.id = sb.city_id
    join crm_users_view u on u.id = o.user_id
where 1=1
    [[and gc.id in ({{city_id}})]]
    [[and s.id in ({{store_id}})]]
    [[and o.total_receipt > {{receipt_greater_than}}]]
    and o.actual_delivery_time >= {{desde}} - interval '1 day' 
    and o.actual_delivery_time < {{hasta}} + interval '2 day'
    and o.actual_delivery_time at time zone sb.timezone >= {{desde}} 
    and o.actual_delivery_time at time zone sb.timezone < {{hasta}} + interval '1 day'
    and o.currency = 'MXN'
    and o.status = 'DELIVERED'
    and o.order_kind = 'NORMAL'
    and u.is_active
group by 1,2--,3,4,5
[[having count(distinct o.id) > {{more_than_n_orders}}]]
order by orders desc;
