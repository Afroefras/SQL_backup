select
    case when o.platform = 0 and (o.client_bundle like '%uber%' or (o.client_bundle is null and u.tmp_uber_original_segmentation = 'Uber')) then 'Uber' else 'Cornershop' end as platform,
    date_trunc('day', o.actual_delivery_time at time zone gc.timezone) as order_date,
    count(distinct o.id) as orders,
    count(distinct o.user_id) as users,
    count(distinct o.user_id) filter (where date_trunc('day', u.date_first_order) = date_trunc('day', o.actual_delivery_time)) as new_users,
    sum(o.qty_products_ordered) as ordered,
    sum(o.qty_products_found)*1.00 / sum(o.qty_products_ordered) as found_rate,
    sum(coalesce(o.total_receipt,0)) as sales,
    sum(coalesce(o.total_receipt,0))*1.00 / count(distinct o.id) as avg_ticket
from orders_order o 
    join catalog_storebranch sb on sb.id = o.store_branch_id
    join catalog_store s on s.id = sb.store_id
    join geo_city gc on gc.id = sb.city_id and gc.country_id = 'MX'
    join crm_users_view u on u.id = o.user_id
where 1=1
    and s.id in ({{store_id}})
    and o.actual_delivery_time >= {{date_from}} - interval '1 day'
    and o.actual_delivery_time < {{date_to}} + interval '2 day'
    and o.actual_delivery_time at time zone gc.timezone >= {{date_from}}
    and o.actual_delivery_time at time zone gc.timezone < {{date_to}} + interval '1 day'
    and o.currency = 'MXN'
    and o.status = 'DELIVERED'
    and o.order_kind = 'NORMAL'
group by 1,2;
