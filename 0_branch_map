select 
    concat(s.id, '|', s.name) as store,
    concat(sb.id, '|', sb.name) as branch,
    sb.lng, 
    sb.lat,
    sbp.parameter,
    sbp.value as parameter_value
from catalog_storebranch sb 
    join catalog_store s on s.id = sb.store_id and sb.active
    left join catalog_storebranchparameter sbp on sbp.branch_id = sb.id 
where 1=1 
    and sb.id in ({{branch_id}})
    and sbp.parameter in ('branch_area_radius_in_meters','MAX_LINEAR_DISTANCE_FROM_CUSTOMER_TO_BRANCH','feasibility_threshold')
