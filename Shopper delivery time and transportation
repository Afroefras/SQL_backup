select 
    o.order_id,
    sh.transportation,
    extract(epoch from ot.delivered_time - ot.delivery_on_the_way_time)/60 as delivery_time_minutes
from orders_orderattributes o
    join catalog_store s on s.id = o.store_id
    join orders_ordertimes ot using (order_id)
    join geo_city gc on gc.id = o.city_id
    join shoppers_attributes sh on sh.user_id = o.shopper_delivery_id
where 1=1
    and s.id = 2902
    and o.actual_delivery_time >= {{desde}} - interval '1 day' 
    and o.actual_delivery_time < {{hasta}} + interval '2 day'
    and o.actual_delivery_time at time zone gc.timezone >= {{desde}} 
    and o.actual_delivery_time at time zone gc.timezone < {{hasta}} + interval '1 day'
